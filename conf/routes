# Routes
# This file defines all routes (Higher priority routes first)
# ~~~~

# === Home page 
GET     /                           controllers.Welcome.index()
GET     /user                       @controllers.Welcome.user()
PUT     /members/increase/:id       @controllers.Welcome.increaseDebt(id: String)

# === Admin page
GET     /admin                      controllers.Welcome.admin()
GET     /amount                 	@controllers.Administration.amount()
GET     /members                 	@controllers.Administration.listPerson()
POST    /members            		@controllers.Administration.addPerson()
DELETE  /members/:id                @controllers.Administration.deletePerson(id: String)
PUT     /user                       @controllers.Administration.updateAmount()
PUT     /members/discharge/:id      @controllers.Administration.discharge(id: String)
PUT     /members/name/:id           @controllers.Administration.updateNameFirstname(id: String)
PUT     /members/picture/:id		@controllers.Administration.updatePicture(id: String)

# === Help page
GET 	/help						controllers.Welcome.help()

# === Statistics page
GET 	/statistics					             controllers.Welcome.statistics()
GET     /stats/:nb/$granularity<[1-2]+>     @controllers.Statistics.listStatistics(ids: String, nb: Integer, granularity: Integer )

# === OAuth
GET	  /oauth2callback?client_name=Google2Client   org.pac4j.play.CallbackController.callback()
POST  /oauth2callback?client_name=Google2Client   org.pac4j.play.CallbackController.callback()
GET   /oauth2callback                             org.pac4j.play.CallbackController.callback()
POST  /oauth2callback                             org.pac4j.play.CallbackController.callback()
GET   /logout                                     org.pac4j.play.CallbackController.logoutAndRedirect()

# === Mobile
PUT     /members/image/:id		    @controllers.Administration.updateImage(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
