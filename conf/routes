# Routes
# This file defines all Accueil routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Welcome.index()
GET     /user                       controllers.Welcome.user()
GET     /admin                      controllers.Welcome.admin()
GET 	/help						controllers.Welcome.help()
GET 	/statistics					controllers.Welcome.statistics()
GET     /members                 	controllers.Administration.listPerson()
POST    /member            		    controllers.Administration.addPerson()
DELETE  /members/:id                controllers.Administration.deletePerson(id: Long)


#OAuth
GET	  /oauth2callback?client_name=Google2Client   org.pac4j.play.CallbackController.callback()
POST  /oauth2callback?client_name=Google2Client   org.pac4j.play.CallbackController.callback()
GET   /oauth2callback                             org.pac4j.play.CallbackController.callback()
POST  /oauth2callback                             org.pac4j.play.CallbackController.callback()
GET   /logout                                     org.pac4j.play.CallbackController.logoutAndRedirect()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
