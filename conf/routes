# Routes
# This file defines all Accueil routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Accueil.index()
GET     /user                       controllers.Accueil.user()
GET     /admin                      controllers.Accueil.admin()
GET 	/aide						controllers.Accueil.aide()
GET 	/statistiques				controllers.Accueil.statistiques()
GET     /personnes                  controllers.Administration.listePersonnes()
POST    /ajoutPersonne              controllers.Administration.AjouterPersonne()
POST    /supprPersonne              controllers.Administration.SupprimerPersonne()


#OAuth
GET	  /oauth2callback?client_name=Google2Client   org.pac4j.play.CallbackController.callback()
POST  /oauth2callback?client_name=Google2Client   org.pac4j.play.CallbackController.callback()
GET   /oauth2callback                             org.pac4j.play.CallbackController.callback()
POST  /oauth2callback                             org.pac4j.play.CallbackController.callback()
GET   /logout                                     org.pac4j.play.CallbackController.logoutAndRedirect()


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
